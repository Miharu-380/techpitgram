<div class="main">
  <div class="card devise-card">
    <div class="form-wrap">
      <div class="form-group text-center">
        <h2 class="logo-img mx-auto"></h2>
        <p class="text-secondary">友達の写真や動画をチェックしよう</p>
      </div>

      <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
        <% if @user.errors.include?(:email) %>
           <p style="color: red;"><%= @user.errors.full_messages_for(:email).first %>
        <% end %>
        </div>

        <div class="form-group">
          <%= f.text_field :name, autofocus: true, placeholder: "フルネーム", class: "form-control" %>
          <% if @user.errors.include?(:name) %>
           <p style="color: red;"><%= @user.errors.full_messages_for(:name).first %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.text_field :username, autofocus: true, placeholder: "ユーザーネーム", class: "form-control" %>
        <% if @user.errors.include?(:username) %>
           <p style="color: red;"><%= @user.errors.full_messages_for(:username).first %>
        <% end %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
        <% if @user.errors.include?(:password) %>
           <p style="color: red;"><%= @user.errors.full_messages_for(:password).first %>
        <% end %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードの確認", class: "form-control" %>
        <% if @user.errors.include?(:password_confirmation) %>
           <p style="color: red;"><%= @user.errors.full_messages_for(:password_confirmation).first %>
        <% end %>
        </div>

        <div class="actions">
          <%= f.submit "登録する", class: "btn btn-primary w-100" %>
        </div>
      <% end %>

      <br>

      <p class="devise-link">
        アカウントをお持ちですか？
        <%= link_to "サインインする", new_user_session_path %>
      </p>
    </div>
  </div>
</div>
